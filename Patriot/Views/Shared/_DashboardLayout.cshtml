<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Inter font CDN -->

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        /*loader css*/
        .center-div {
            width: 300px;
            height: 300px;
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -150px;
            margin-top: -150px;
        }

        .spinner {
            position: fixed;
            z-index: 999;
            height: 100%;
            width: 100%;
            top: 0;
            left: 0;
            background-color: Black;
            filter: alpha(opacity=60);
            opacity: 0.6;
            -moz-opacity: 0.8;
        }

        .loader {
            margin: auto;
            border: 16px solid #f3f3f3;
            border-radius: 50%;
            border-top: 16px solid #15a0ec;
            border-bottom: 16px solid #15a0ec;
            width: 120px;
            height: 120px;
            -webkit-animation: spin 2s linear infinite;
            animation: spin 2s linear infinite;
        }

        .inner-div {
            /*background-color: white;*/
            border-radius: 15px;
            margin: auto;
            margin-top: 35%;
            /*padding: 2%;
                    width: 150px*/;
        }


            .inner-div p {
                margin-top: -40px;
                margin-bottom: 1rem;
                margin-left: 69px;
            }

        * {
            font-family: 'Inter', sans-serif;
        }

        .fs-14 {
            font-size: 14px;
        }

        .pr-60 {
            padding-right: 60px;
        }

        .fw-700 {
            font-weight: 700;
        }

        .top-30-right-30 {
            top: 30px;
            right: 30px;
        }

        .radius-20 {
            border-radius: 20px !important;
        }

        .pr-40 {
            padding-right: 40px;
        }

        .pl-20 {
            padding-left: 20px;
        }

        .pr-10 {
            padding-right: 10px;
        }

        .search-barr {
            min-width: 275px;
            background: rgba(150, 150, 150, 0.1);
            box-shadow: inset 0px 20px 50px rgba(78, 78, 78, 0.15);
            border-radius: 16px;
            padding: 5px 10px 5px 20px;
        }

        .main-headingg {
            font-family: Inter;
            font-size: 40px;
            font-weight: 300;
            line-height: 48px;
        }

        .pagination li .page-link:focus {
            background-color: #BD464F;
            color: black !important;
        }

        .pagination li .page-link {
            color: black !important;
        }

        .dropdown-shadow {
            box-shadow: 4px 4px 16px rgba(78, 78, 78, 0.2);
        }

        .main-info-table {
            min-width: 1400px;
            overflow-x: scroll;
        }


            .main-info-table td, th {
                vertical-align: middle;
            }

        .btn-parrot {
            background-color: #62DB8A;
            color: white;
        }

        .left--20 {
            left: -20px;
        }

        .ml-60 {
            margin-left: 60px;
        }

        input[type=search] {
            background-color: transparent;
            border: none;
        }

            input[type=search]:focus {
                background-color: transparent;
                outline: none !important;
            }

        .pop-up-table th {
            text-align: end;
            padding-bottom: 40px;
        }

        .pop-up-table td {
            padding-left: 10px;
            font-size: 16px;
            font-weight: 400;
            line-height: 19px;
            padding-bottom: 40px;
        }

        .comments {
            font-size: 16px;
            font-weight: 600;
            line-height: 24px;
            letter-spacing: 0em;
        }

            .comments span {
                color: #4E4E4E;
                font-weight: 400;
            }

            .comments div {
                padding-right: 25px;
            }

        .add-comment {
            background-color: #EFEFEF;
            padding: 24px;
            border-top: 1px solid #4E4E4E;
        }

            .add-comment .input-div {
                width: 85%;
            }

            .add-comment input {
                border: none;
                background-color: transparent;
            }

                .add-comment input:focus {
                    outline: none;
                }
    </style>
</head>
<body>
    <header class="mb-5 pb-2 pt-2">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/dashboard/patriott-log-.png" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item ml-60">
                            <div class="d-flex search-barr align-items-center py-2">
                                <div class="pl-20 pr-10">
                                    <img src="~/images/dashboard/search-icon.png" alt="search" width="20px" height="20px">
                                </div>
                                <input class="me-2" type="search" placeholder="Search here" aria-label="Search">
                            </div>
                        </li>
                    </ul>

                    <ul class="nav-item">
                        <div class="d-flex align-items-center gap-4">
                            <div>
                                <a href="">
                                    <img src="~/images/dashboard/setting-icon.png" alt="">
                                </a>
                            </div>
                            <div>
                                <a href="">
                                    <img src="~/images/dashboard/notification-icon.png" alt="">
                                </a>
                            </div>
                            <div>
                                <a href="">
                                    <img src="~/images/dashboard/jr-img.png" alt="">
                                </a>
                            </div>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>
    <div class="spinner" style="display:none">
        <div class="center-div">
            <div class="inner-div">
                <img width="200px" src="~/images/loader.gif" alt="Loader" />
                <p>Loading...</p>
                @*<div class="loader"></div>*@
            </div>
        </div>
    </div>
</body>
</html>
